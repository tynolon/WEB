   <script> //5.1
   function factorial( n) {
    if (n <= 1)
      return 1;
    return n * factorial(n - 1);
  }
  n=prompt("Введіть число:");
  alert(factorial(n));
   </script>
   <script> //5.2
   function factorial(n){
var answer=1;
	  for( var i=2;i<=n;i++)
	 answer=answer* (i);
	  return answer;
  }
  n=prompt("Введіть число:");
  alert(factorial(n));</script>
